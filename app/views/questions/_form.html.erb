<h1><%= question_header(@question) %></h1>

<%= form_with model: [@current_test, @question], local: true do |form| %>
  <div class="field">
    <%= form.label :body, "Question Body:" %>
    <%= form.text_area :body, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Questions', test_questions_path(@current_test) %>