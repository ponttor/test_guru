<h1>Test Detail</h1>
<p><%= @test.title %> - <%= @test.questions.count %> Questions</p>

<h2>Questions</h2>
<ul>
  <% @test.questions.each do |question| %>
    <li>
      <%= question.body %> - 
      <%= link_to 'Show', test_question_path(@test, question) %> |
      <%= link_to 'Edit', edit_test_question_path(@test, question) %> |
      <%= link_to 'Delete', test_question_path(@test, question), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add New Question', new_test_question_path(@test) %>